          display: flex;
          flex-wrap: wrap;
          gap: 1.5rem;
        }
  
        .gallery .box-container .box {
          height: 25rem;
          flex: 1 1 40rem;
          border: 1rem solid #fff;
          box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
          border-radius: 0.5rem;
          position: relative;
          overflow: hidden;
        }
  
        .gallery .box-container .box img {
          height: 100%;
          width: 100%;
          object-fit: cover;
        }
  
        .gallery .box-container .box .content {
