    <script>
        // Sample restaurant data
        const restaurantData = [<%- JSON.stringify(restaurantinfo) %>];
    
       // console.log("Restaurant Data:", restaurantData);
    
        function createRestaurantHTML(restaurant) {
            return `
                <div class="restaurant-card" data-id="${restaurant._id}">
                    <div class="restaurant-header">
                        <img src="${restaurant.image}" alt="${restaurant.name}" class="restaurant-image">
                        <div>
                            <h2>${restaurant.name}</h2>
                            <p id="rating-${restaurant._id}">Rating: ${restaurant.reviews || 'No ratings yet'}</p>
                        </div>
                    </div>
    
                    <div class="menu-section">
                        <h3 class="section-title">Menu</h3>
                        <div class="menu-items">
                            ${restaurant.menu.map(item => `
                                <div class="menu-item">
                                    <img src="${item.image}" alt="${item.name}">
                                    <div>
                                        <h4>${item.name}</h4>
                                        <p>${item.description}</p>
                                        <p class="price">$${item.price}</p>
                                    </div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
    
                   
    
                    <div class="rating-section">
                        <h3 class="section-title">Add Rating</h3>
                        <form class="rating-form" onsubmit="handleRatingSubmit(event, '${restaurant._id}')">
                           
                        </form>
                    </div>
    
                    <div class="comments">
                        <h3 class="section-title">Comments</h3>
                        <div class="comments-list">
                            ${restaurant.comments.length ?
                                restaurant.comments.map(comment => `
                                    <div class="comment">${comment}</div>
                                `).join('') :
                                '<p class="empty-message">No comments yet</p>'
                            }
                        </div>
                       
                    </div>
                    <form class="comment-form" method="post" action="/review/${restaurant._id}">
    <input type="text" name="comment" class="comment-input" placeholder="Add a comment..." required>
    <input type="number" name="rating" id="rating-${restaurant._id}" required min="1" max="5">
    <button type="submit" class="submit-button">Submit</button>
</form>

                </div>
            `;
        }
    
  
        document.addEventListener('DOMContentLoaded', () => {
            const container = document.querySelector('.food-items');
    
            // Ensure restaurantData is an array
            const data = Array.isArray(restaurantData) ? restaurantData : [restaurantData];
    
            container.innerHTML = data.map(createRestaurantHTML).join('');
        });
    </script>
    
